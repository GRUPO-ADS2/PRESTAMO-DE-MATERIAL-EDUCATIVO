@model SistemaPrestamos.Models.Prestamo

<div class="container mt-3">
    <h4>Actualizar Préstamo</h4>
    <form asp-action="ActualizarPrestamo" method="post">
        <div class="form-group">
            <label asp-for="FechaPrestamo" class="control-label"></label>
            <input asp-for="FechaPrestamo" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Estado" class="control-label"></label>
            <input asp-for="Estado" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Actualizar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
