@model SistemaPrestamos.Models.PrestamoViewModel

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sistema de Préstamo de Material Educativo</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
        }
        .navbar-brand {
            font-weight: bold;
        }
        .sidebar {
            height: 100vh;
            position: fixed;
        }
        .nav-link {
            font-size: 1.1rem;
        }
        .nav-link.active {
            font-weight: bold;
        }
        main {
            margin-left: 220px; /* Width of the sidebar */
            padding: 20px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
        <a class="navbar-brand" href="@Url.Action("Index", "Home")">Sistema de Préstamo de Material Educativo</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("RegistrarSolicitud", "Solicitudes")">Solicitud</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "Prestamos")">Préstamo</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("RegistrarPenalizacion", "Penalizacion")">Penalización</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "Home")">Salir</a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="container-fluid mt-5">
        <div class="row">
            <nav id="sidebar" class="col-md-3 col-lg-2 bg-light sidebar">
                <div class="sidebar-sticky">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link active" href="#section-registrar-prestamo" data-toggle="tab">
                                Registrar Préstamo
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#section-actualizar-prestamo" data-toggle="tab">
                                Actualizar Préstamo
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#section-registrar-devolucion" data-toggle="tab">
                                Registrar Devolución
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>
            <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
                <div class="tab-content">
                    <div id="section-registrar-prestamo" class="tab-pane active">
                        @await Html.PartialAsync("_RegistrarPrestamoModal", Model.Prestamo)
                    </div>
                    <div id="section-actualizar-prestamo" class="tab-pane">
                        @await Html.PartialAsync("_ActualizarPrestamo", Model.Prestamo)
                    </div>
                    <div id="section-registrar-devolucion" class="tab-pane">
                        @await Html.PartialAsync("_RegistrarDevolucion", Model.Prestamo)
                    </div>
                </div>
            </main>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function(){
            // Activar el primer tab por defecto
            $('.nav-link').first().addClass('active');
            $('.tab-pane').first().addClass('active');

            function buscarSolicitudPrestamo() {
                $.ajax({
                    url: '@Url.Action("BuscarSolicitudPrestamo", "Prestamos")',
                    type: 'GET',
                    success: function (data) {
                        $('#solicitudesContainer').html(data);
                    }
                });
            }

            $('#registrarPrestamoModal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget);
                var idSolicitud = button.data('id');
                $.ajax({
                    url: '@Url.Action("MostrarFormularioPrestamo", "Prestamos")',
                    type: 'GET',
                    data: { id: idSolicitud },
                    success: function (data) {
                        $('#modalContainer').html(data);
                        $('#registrarPrestamoModal').modal('show');
                    }
                });
            });

            $(document).on('click', '#registrarBtn', function () {
                var materialesEscaneados = parseInt($('#materialesEscaneados').val());
                var materialesEscanear = parseInt($('#materialesEscanear').val());
                if (materialesEscaneados === materialesEscanear) {
                    // Enviar formulario para registrar el préstamo
                    $('#registrarPrestamoForm').submit();
                }
            });

            $(document).on('input', '#codigoBarras', function () {
                var codMaterial = $('#codMaterial').val();
                var codigoBarras = $(this).val();
                if (codMaterial == codigoBarras) {
                    var materialesEscaneados = parseInt($('#materialesEscaneados').val());
                    $('#materialesEscaneados').val(materialesEscaneados + 1);
                    if (materialesEscaneados + 1 === parseInt($('#materialesEscanear').val())) {
                        $('#registrarBtn').prop('disabled', false);
                    }
                } else {
                    alert('El material escaneado no coincide con la solicitud. Por favor, verifique y escanee el material correcto');
                    $(this).val('');
                }
            });
        });
    </script>
</body>
</html>
