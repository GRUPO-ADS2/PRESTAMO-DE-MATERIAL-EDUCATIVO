@model SistemaPrestamos.Models.LoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-light">

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card mt-5">
                    <div class="card-header text-center">
                        <h2>Acceso</h2>
                    </div>
                    <div class="card-body">
                        <form method="post" asp-action="LoginPost">
                            <div class="form-group">
                                <label for="User">Usuario</label>
                                <input type="text" class="form-control" asp-for="User" placeholder="Ingrese usuario" />
                            </div>
                            <div class="form-group">
                                <label for="Password">Contraseña</label>
                                <input type="password" class="form-control" asp-for="Password" placeholder="Ingrese password" />
                            </div>
                            <button type="submit" class="btn btn-primary btn-block">Acceder</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS and dependencies (includes Popper.js) -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
</body>
</html>
