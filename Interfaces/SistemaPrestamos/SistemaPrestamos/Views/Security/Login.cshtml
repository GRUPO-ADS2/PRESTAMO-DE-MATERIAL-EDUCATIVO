@model SistemaPrestamos.Models.LoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f8f9fa;
        }

        .login-container {
            margin-top: 5%;
            margin-bottom: 5%;
        }

        .login-card {
            border: 0;
            border-radius: 1rem;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        }

            .login-card .card-header {
                background-color: #007bff;
                color: white;
                border-bottom: 0;
                border-top-left-radius: 1rem;
                border-top-right-radius: 1rem;
            }

            .login-card .card-body {
                padding: 2rem;
            }

        .form-control {
            border-radius: 0.5rem;
        }

        .btn-primary {
            border-radius: 0.5rem;
            padding: 0.75rem;
            font-size: 1.25rem;
        }
    </style>
</head>
<body class="bg-light">

    <div class="container login-container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card login-card">
                    <div class="card-header text-center">
                        <h2>Acceso</h2>
                    </div>
                    <div class="card-body">
                        <form method="post" asp-action="LoginPost">
                            <div class="form-group">
                                <label for="User">Usuario</label>
                                <input type="text" class="form-control" asp-for="User" placeholder="Ingrese usuario" required />
                            </div>
                            <div class="form-group">
                                <label for="Password">Contraseña</label>
                                <input type="password" class="form-control" asp-for="Password" placeholder="Ingrese contraseña" required />
                            </div>
                            <button type="submit" class="btn btn-primary btn-block">Acceder</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS and dependencies (includes Popper.js) -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
</body>
</html>
