@model List<Material>

@{
    ViewData["Title"] = "Solicitud de Préstamo";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="SubmitLoanRequest" method="post">
    <table class="table">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Cantidad Disponible</th>
                <th>Cantidad a Solicitar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var material in Model)
            {
                <tr>
                    <td>@material.Nombre</td>
                    <td>@material.Descripcion</td>
                    <td>@material.CantidadDisponible</td>
                    <td>
                        <input type="number" name="cantidadSolicitada[@material.Id]" min="1" max="@material.CantidadDisponible" />
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit" class="btn btn-primary">Solicitar Préstamo</button>
</form>
