@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Menú Principal Encargado - Sistema de Préstamo de Material Educativo</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Estilos adicionales personalizados */
        .navbar-nav.ml-auto {
            margin-left: auto;
        }

        /* Estilo para hover con transición */
        .navbar-nav li.nav-item {
            transition: background-color 0.3s ease; /* Transición suave */
        }

            .navbar-nav li.nav-item:hover {
                background-color: rgba(0, 0, 0, 0.05);
                border-radius: 10px;
                /* Fondo ligeramente oscurecido al hacer hover */
            }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
        <a class="navbar-brand" href="#">Sistema de Préstamo de Material Educativo</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("RegistrarSolicitud", "Solicitudes")">Solicitud</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("RegistrarPrestamo", "Prestamos")">Registrar Préstamo</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("ActualizarPrestamo", "Prestamos")">Actualizar Préstamo</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("RegistrarDevolucion", "Prestamos")">Registrar Devolucion</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("RegistrarPenalizacion", "Penalizacion")">Penalización</a>
                </li>
            </ul>
            <ul class="navbar-nav ml-auto">
                <!-- ml-auto para alinear a la derecha -->
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Logout", "Security")">Cerrar sesión</a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="container-fluid text-center" style="padding-top: 70px;">
        <h1 class="display-4">Sistema de Prestamo de Material Educativo</h1>
        <p>Bienvenido estimado(a) encargado(a).</p>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
</body>
</html>
