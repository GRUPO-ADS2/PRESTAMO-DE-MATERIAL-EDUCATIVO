@model List<Prestamo>

@{
    ViewData["Title"] = "Listado de Préstamos";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
            <th>Alumno</th>
            <th>Material</th>
            <th>Fecha Préstamo</th>
            <th>Fecha Devolución</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Alumno.Nombre</td>
                <td>@item.Material.Nombre</td>
                <td>@item.FechaPrestamo.ToShortDateString()</td>
                <td>@item.FechaDevolucion.ToShortDateString()</td>
                <td>
                    <a asp-controller="Encargado" asp-action="RegistrarDevolucion" asp-route-prestamoId="@item.Id" class="btn btn-primary">Registrar Devolución</a>
                    <a asp-controller="Encargado" asp-action="RegistrarPenalizacion" asp-route-prestamoId="@item.Id" class="btn btn-danger">Registrar Penalización</a>
                </td>
            </tr>
        }
    </tbody>
</table>
